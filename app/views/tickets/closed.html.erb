
<h2>Tickets Fechados</h2>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Criado em</th>
      <th>Atualizado em</th>
      <th>Uid</th>
      <th>Perfil</th>
      <th>Respondido</th>
      <th>Em Progresso</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= local_time(ticket.created_at) %></td>
        <td><%= local_time(ticket.updated_at) %></td>
        <td><%= ticket.uid %></td>
        <td><%= ticket.skill %></td>
        <td><%= ticket.served %></td>
        <td><small><%= ticket.progress %></small></td>
        <td><%= link_to 'Mostrar', ticket %></td>
        <td><%= link_to 'Editar', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Eliminar', ticket, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @tickets %>

total_entries: <%= @tickets.total_entries %>

