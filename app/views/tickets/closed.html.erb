
<h2>Closed Tickets</h2>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Created at</th>
      <th>Updated at</th>
      <th>Uid</th>
      <th>Skill</th>
      <th>Served</th>
      <th>Progress</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= local_time(ticket.created_at) %></td>
        <td><%= local_time(ticket.updated_at) %></td>
        <td><%= ticket.uid %></td>
        <td><%= ticket.skill %></td>
        <td><%= ticket.served %></td>
        <td><small><%= ticket.progress %></small></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @tickets %>

total_entries: <%= @tickets.total_entries %>

